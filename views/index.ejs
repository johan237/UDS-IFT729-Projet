	document.getElementById('btn_create').addEventListener('click', function() {
		index.createRoom(document.getElementById("userName").value)
	});

	document.getElementById('btn_join').addEventListener('click', function() {
		index.joinRoom(document.getElementById("userName").value,document.getElementById("room").value)
	});

</script>
</html>